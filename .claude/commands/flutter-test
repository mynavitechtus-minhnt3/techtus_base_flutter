#!/bin/bash
# Flutter testing command
# Usage: /flutter-test [type]

TEST_TYPE=${1:-"all"}

case $TEST_TYPE in
  "unit"|"ut")
    echo "ğŸ§ª Running unit tests..."
    make ut
    ;;
  "widget"|"wt")
    echo "ğŸ¨ Running widget tests..."
    make wt
    ;;
  "golden"|"ug")
    echo "âœ¨ Updating golden test files..."
    make ug
    ;;
  "coverage"|"cov")
    echo "ğŸ“Š Generating coverage report..."
    make cov
    ;;
  "all"|*)
    echo "ğŸ” Running all tests..."
    make te
    ;;
esac

echo "âœ… Test execution complete!"