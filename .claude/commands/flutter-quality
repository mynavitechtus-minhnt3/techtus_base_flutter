#!/bin/bash
# Flutter code quality command
# Usage: /flutter-quality [action]

ACTION=${1:-"all"}

case $ACTION in
  "lint")
    echo "ğŸ” Running linting..."
    make lint
    ;;
  "format"|"fmt")
    echo "ğŸ’… Formatting code..."
    make fm
    ;;
  "analyze")
    echo "ğŸ” Running static analysis..."
    make analyze
    make sl
    ;;
  "fix")
    echo "ğŸ”§ Applying dart fixes..."
    make dart_fix
    ;;
  "ci")
    echo "ğŸš€ Running full CI pipeline..."
    make ci
    ;;
  "all"|*)
    echo "ğŸ” Running linting and formatting..."
    make lint
    make fm
    ;;
esac

echo "âœ… Code quality check complete!"